<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollusionActivity">

    <include layout="@layout/toolbar"/>

    <EditText
        android:id="@+id/editDataToSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textSize="20sp"
        android:layout_below="@+id/toolbar"
        android:hint="@string/edt_data_to_send_hint"
        android:inputType="textCapWords"
        android:imeOptions="flagNoExtractUi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_data_share"
        android:id="@+id/btnCovertShare"
        android:layout_below="@+id/editDataToSend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />
</RelativeLayout>
